# Lifecycle policy to keep last 10 images
resource "aws_ecr_lifecycle_policy" "marketdata" {
  repository = aws_ecr_repository.marketdata.name

  policy = jsonencode({
    rules = [
      {
        rulePriority = 1
        description  = "Keep last 10 images"
        selection = {
          tagStatus   = "any"
          countType   = "imageCountMoreThan"
          countNumber = 10
        }
        action = {
          type = "expire"
        }
      }
    ]
  })
}

